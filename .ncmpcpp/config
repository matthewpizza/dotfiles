# settings
# https://github.com/arybczak/ncmpcpp/blob/master/doc/config

header_visibility = "no"

## gets rid of the track column and makes the song title a bit narrower
song_columns_list_format = (20)[]{a} (40)[white]{t|f:Title} (20)[cyan]{b} (7f)[magenta]{l}

## File "The Raincoats" under "R" instead of "T"
ignore_leading_the = yes

## split screen
##
## It’s fucking dumb in the year of our lord 2020
## that this is called _slave_ and not *secondary*
startup_screen = visualizer
startup_slave_screen = playlist
startup_slave_screen_focus = yes
locked_screen_width_part = 25

## now playing
## artist - title or filename
song_status_format = {{%a - }{%t}}|{%f}
progressbar_look = "━●—"

# visualizer
visualizer_output_name = visualizer

## defaults to 30
visualizer_sync_interval = 30

## no  - 44100:16:1
## yes - 44100:16:2
visualizer_in_stereo = no

## spectrum, wave, wave_filled, ellipse
visualizer_type = ellipse

